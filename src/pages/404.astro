---
import BaseLayout from "../layouts/BaseLayout.astro";
import { Icon } from "astro-icon/components";
---

<BaseLayout title="Seite nicht gefunden" description="Die angeforderte Seite konnte nicht gefunden werden.">
    <section class="error-page relative min-h-screen flex items-center justify-center overflow-hidden">
        <!-- Gradient Background -->
        <div class="absolute inset-0 gradient-brand opacity-95"></div>
        <div class="absolute inset-0 bg-black/10"></div>

        <!-- Decorative circles -->
        <div class="absolute -top-32 -right-32 w-96 h-96 rounded-full bg-white/5 blur-3xl"></div>
        <div class="absolute -bottom-32 -left-32 w-96 h-96 rounded-full bg-white/5 blur-3xl"></div>

        <div class="relative z-10 max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-24 text-center text-white">
            <Icon name="tabler:error-404" size={200} class="text-white/60 mx-auto mb-6" />
            <h1 class="text-3xl sm:text-4xl lg:text-5xl font-extrabold mb-4">Seite nicht gefunden</h1>
            <p class="text-lg text-blue-100 max-w-md mx-auto mb-10 leading-relaxed">Die angeforderte Seite existiert nicht oder wurde verschoben.</p>
            <div class="flex flex-wrap gap-4 justify-center">
                <a href="/" class="inline-flex items-center gap-2 px-6 py-3 bg-white text-blue-700 font-semibold rounded-xl hover:bg-blue-50 transition-colors shadow-lg">
                    <Icon name="tabler:home" class="h-5 w-5" />
                    Zur Startseite
                </a>
                <a href="/portfolio" class="inline-flex items-center gap-2 px-6 py-3 bg-white/20 backdrop-blur-sm text-white font-semibold rounded-xl hover:bg-white/30 transition-colors border border-white/30">
                    Projekte ansehen
                    <Icon name="tabler:arrow-right" class="h-5 w-5" />
                </a>
            </div>
        </div>
    </section>

    <!-- Ruhiger Ãœbergangsbereich vor dem Footer -->
    <section class="error-404 py-20 bg-gray-50 dark:bg-gray-950 text-center">
        <div class="max-w-2xl mx-auto px-4">
            <p class="text-lg text-gray-500 dark:text-gray-400 leading-relaxed">Du suchst etwas Bestimmtes? Schreib mir gerne eine Nachricht.</p>
            <a href="mailto:hello@tger.me" class="inline-flex items-center gap-2 mt-6 text-blue-600 dark:text-blue-400 font-medium hover:underline">
                <Icon name="tabler:mail" class="h-5 w-5" />
                hello@tger.me
            </a>
        </div>
    </section>

    <style is:global>
        main:has(> .error-page) + footer {
            margin-top: 0;
        }
    </style>
</BaseLayout>
