---
import { Image } from "astro:assets";
import ResumeLayout from "../../layouts/ResumeLayout.astro";
import { Icon } from "astro-icon/components";
import { personal, experience, education, furtherEducation, skills, projects } from "../../data/cv_de";

const imageModules = import.meta.glob<{ default: ImageMetadata }>("../../assets/apply/*.{jpg,jpeg,png}", { eager: true });
const photoKey = `../../assets/apply/${personal.photo}`;
const photoModule = imageModules[photoKey];
if (!photoModule) throw new Error(`Photo not found: src/assets/${personal.photo}`);
const photoImage = photoModule.default;

function formatDate(dateStr: string): string {
    if (!dateStr) return "";
    const [year, month] = dateStr.split("-");
    return `${month}/${year}`;
}

const today = new Date().toLocaleDateString("de-DE", { day: "numeric", month: "long", year: "numeric" });
---

<ResumeLayout title="Lebenslauf – Tristan Germer" description="Lebenslauf von Tristan Germer – Berufserfahrung, Ausbildung und Kenntnisse." lang="de">
    <!-- Print toolbar -->
    <div class="resume-toolbar">
        <div class="max-w-[210mm] mx-auto px-6 py-3 flex items-center justify-between">
            <a href="/de/cv" class="text-sm text-gray-500 hover:text-gray-900 transition-colors">&larr; Zurück zum Lebenslauf</a>
            <div class="flex items-center gap-3">
                <a href="/en/cv-print" class="text-sm px-3 py-1.5 border border-gray-300 rounded-full hover:bg-gray-50 transition-colors">English</a>
                <a href="/apply/cv-de.pdf" target="_blank" class="inline-flex items-center gap-1.5 text-sm px-4 py-1.5 bg-blue-600 text-white rounded-full hover:bg-blue-700 transition-colors">
                    <Icon name="tabler:file-type-pdf" class="h-4 w-4" />
                    PDF herunterladen
                </a>
            </div>
        </div>
    </div>

    <!-- Cover Page -->
    <div class="resume-page resume-cover">
        <div class="cover-header-bar"></div>

        <div class="cover-application">
            <h1 class="cover-application-title" style="margin-top: 1rem; font-size: 1.75rem;">Lebenslauf</h1>
        </div>

        <div class="cover-bottom">
            <Image src={photoImage} alt={personal.name} class="cover-photo" />
            <h2 class="cover-name">{personal.name}</h2>
            <p class="cover-tagline">{personal.tagline}</p>

            <table class="cover-data-table">
                <tr>
                    <td class="cover-data-label">Geburtstag</td>
                    <td class="cover-data-value">{personal.birthdate}</td>
                </tr>
                <tr>
                    <td class="cover-data-label">Arbeitssprachen</td>
                    <td class="cover-data-value">{personal.languageValues}</td>
                </tr>
                <tr>
                    <td class="cover-data-label">Wohnort</td>
                    <td class="cover-data-value">{personal.address}</td>
                </tr>
                <tr>
                    <td class="cover-data-label">Kontakt</td>
                    <td class="cover-data-value"><a href={`tel:${personal.phone}`} target="_blank" rel="noopener noreferrer">{personal.phone}</a> | <a href={`mailto:${personal.email}`} target="_blank" rel="noopener noreferrer">{personal.email}</a></td>
                </tr>
                {
                    (personal.url || personal.linkedinUrl || personal.githubUrl) && (
                        <tr>
                            <td class="cover-data-label">Online</td>
                            <td class="cover-data-value">
                                {[
                                    personal.url && (
                                        <a href={`https://${personal.url}`} target="_blank" rel="noopener noreferrer">
                                            {personal.url}
                                        </a>
                                    ),
                                    personal.linkedinUrl && (
                                        <a href={`https://${personal.linkedinUrl}`} target="_blank" rel="noopener noreferrer">
                                            {personal.linkedinUrl}
                                        </a>
                                    ),
                                    personal.githubUrl && (
                                        <a href={`https://${personal.githubUrl}`} target="_blank" rel="noopener noreferrer">
                                            {personal.githubUrl}
                                        </a>
                                    ),
                                ]
                                    .filter(Boolean)
                                    .reduce((acc, el, i) => (i === 0 ? [el] : [...acc, " · ", el]), [])}
                            </td>
                        </tr>
                    )
                }
            </table>
        </div>
    </div>

    <!-- CV Content -->
    <div class="resume-page resume-cv-content">
        <div class="cv-page-header">
            <span>Tristan Germer | Lebenslauf</span>
        </div>

        <section class="resume-section">
            <h2 class="resume-heading">Beruflicher Werdegang</h2>
            <table class="resume-table">
                {
                    experience.map((job, i) => (
                        <tr class:list={["resume-entry", { "resume-entry-border": i > 0 }]}>
                            <td class="resume-date">
                                {job.endDate ? (
                                    <>
                                        {formatDate(job.startDate)}
                                        <br />
                                        {formatDate(job.endDate)}
                                    </>
                                ) : (
                                    `Seit ${formatDate(job.startDate)}`
                                )}
                            </td>
                            <td class="resume-detail">
                                {job.position && job.position.length > 0 ? (
                                    <>
                                        <p class="resume-entry-title">{job.position.join(", ")}</p>
                                        <p class="resume-entry-sub">
                                            {job.company}
                                            {job.location && `, ${job.location}`}
                                            <span class="resume-employment-type"> · {job.typeOfEmployment}</span>
                                        </p>
                                    </>
                                ) : (
                                    <>
                                        <p class="resume-entry-title">{job.company}</p>
                                        {job.location && (
                                            <p class="resume-entry-sub">
                                                {job.location} · {job.typeOfEmployment}
                                            </p>
                                        )}
                                        {!job.location && <p class="resume-entry-sub">{job.typeOfEmployment}</p>}
                                    </>
                                )}
                                {job.description?.list && job.description.list.length > 0 && (
                                    <ul class="resume-list">
                                        {job.description.list.map((item) => (
                                            <li>{item}</li>
                                        ))}
                                    </ul>
                                )}
                            </td>
                        </tr>
                    ))
                }
            </table>
        </section>

        <section class="resume-section">
            <h2 class="resume-heading">Hochschulausbildung</h2>
            <table class="resume-table">
                {
                    education.map((edu, i) => (
                        <tr class:list={["resume-entry", { "resume-entry-border": i > 0 }]}>
                            <td class="resume-date">
                                {formatDate(edu.startDate)}
                                <br />
                                {formatDate(edu.endDate)}
                            </td>
                            <td class="resume-detail-mid">
                                <p class="resume-entry-title">
                                    {edu.fieldOfStudy}, {edu.degree}
                                </p>
                                {edu.majorFieldOfStudy && <p class="resume-entry-meta">Schwerpunkt: {edu.majorFieldOfStudy}</p>}
                                {edu.thesis?.title && <p class="resume-entry-meta">Thesis: {edu.thesis.title}</p>}
                            </td>
                            <td class="resume-detail-right">
                                <p class="resume-entry-sub">{edu.school}</p>
                                {edu.location && <p class="resume-entry-meta">{edu.location}</p>}
                            </td>
                        </tr>
                    ))
                }
            </table>
        </section>

        <section class="resume-section">
            <h2 class="resume-heading">Zusatzqualifikationen</h2>
            <table class="resume-table">
                {
                    furtherEducation.map((edu, i) => (
                        <tr class:list={["resume-entry", { "resume-entry-border": i > 0 }]}>
                            <td class="resume-date">
                                {formatDate(edu.startDate) === formatDate(edu.endDate) ? (
                                    formatDate(edu.startDate)
                                ) : (
                                    <>
                                        {formatDate(edu.startDate)}
                                        <br />
                                        {formatDate(edu.endDate)}
                                    </>
                                )}
                            </td>
                            <td class="resume-detail-mid">
                                <p class="resume-entry-title">
                                    {edu.fieldOfStudy}
                                    {edu.degree && `, ${edu.degree}`}
                                </p>
                            </td>
                            <td class="resume-detail-right">
                                <p class="resume-entry-sub">{edu.school}</p>
                                {edu.location && <p class="resume-entry-meta">{edu.location}</p>}
                            </td>
                        </tr>
                    ))
                }
            </table>
        </section>

        {
            projects?.length > 0 && (
                <section class="resume-section">
                    <h2 class="resume-heading">Projekte</h2>
                    <table class="resume-table">
                        {projects.map((project, i) => (
                            <tr class:list={["resume-entry", { "resume-entry-border": i > 0 }]}>
                                <td class="resume-date">{formatDate(project.date)}</td>
                                <td class="resume-detail">
                                    <p class="resume-entry-title">{project.title}</p>
                                    {project.description?.list && project.description.list.length > 0 && (
                                        <ul class="resume-list">
                                            {project.description.list.map((item) => (
                                                <li>{item}</li>
                                            ))}
                                        </ul>
                                    )}
                                </td>
                            </tr>
                        ))}
                    </table>
                </section>
            )
        }

        {
            skills?.length > 0 && (
                <section class="resume-section">
                    <h2 class="resume-heading">Kenntnisse</h2>
                    <div class="resume-skills-grid">
                        {skills.map((cat) => (
                            <div class="resume-skill-group">
                                <h3 class="resume-skill-label">{cat.catagorie}</h3>
                                <ul class="resume-skill-items">
                                    {cat.items.map((item) => (
                                        <li>{item}</li>
                                    ))}
                                </ul>
                            </div>
                        ))}
                    </div>
                </section>
            )
        }

        <div class="resume-date-footer">
            München, {today}
        </div>
    </div>
</ResumeLayout>
