---
import PageLayout from "../../layouts/PageLayout.astro";
import { Icon } from 'astro-icon/components';
import { experience, education, furtherEducation, skills, projects, references } from "../../data/cv_de";

function formatDate(dateStr: string): string {
    if (!dateStr) return "";
    const [year, month] = dateStr.split("-");
    return `${month}/${year}`;
}
---

<PageLayout title="Lebenslauf" description="Lebenslauf von Tristan Germer – Berufserfahrung, Ausbildung und Kenntnisse." alternates={[{hreflang: "de", href: "https://tger.me/de/cv"}, {hreflang: "en", href: "https://tger.me/en/cv"}]}>
    <!-- Language switcher + Download -->
    <div class="flex items-center justify-between mb-8">
        <div class="flex gap-2">
            <span class="px-4 py-1.5 bg-blue-600 text-white text-sm font-medium rounded-full">Deutsch</span>
            <a href="/en/cv" class="px-4 py-1.5 border border-gray-300 dark:border-gray-700 text-sm font-medium rounded-full hover:bg-gray-50 dark:hover:bg-gray-900 transition-colors"> English </a>
        </div>
        <a href="/apply/cv-de.pdf" target="_blank" class="inline-flex items-center gap-1.5 text-sm px-4 py-1.5 bg-blue-600 text-white font-medium rounded-full hover:bg-blue-700 transition-colors">
            <Icon name="tabler:file-type-pdf" class="h-4 w-4" />
            Download
        </a>
    </div>

    <!-- Berufserfahrung -->
    <section class="mb-12">
        <h2 class="flex items-center gap-2 text-2xl font-bold text-gray-900 dark:text-white mb-6 pb-2 border-b border-gray-200 dark:border-gray-800"><Icon name="tabler:briefcase" class="h-6 w-6 text-blue-600 dark:text-blue-400" /> Beruflicher Werdegang</h2>
        <div class="divide-y divide-gray-200 dark:divide-gray-800">
            {
                experience.map((job) => (
                    <div class="py-4 first:pt-0">
                        <div class="flex flex-col md:flex-row md:gap-8">
                            <div class="text-gray-900 dark:text-white md:w-25 md:shrink-0 mb-1 md:mb-0">
                                <span class="md:hidden">{job.endDate ? `${formatDate(job.startDate)} – ${formatDate(job.endDate)}` : `Seit ${formatDate(job.startDate)}`}</span>
                                <div class="hidden md:block">
                                    {job.endDate ? (
                                        <>
                                            <div>{formatDate(job.startDate)}</div>
                                            <div>{formatDate(job.endDate)}</div>
                                        </>
                                    ) : (
                                        <>
                                            <div>Seit</div>
                                            <div>{formatDate(job.startDate)}</div>
                                        </>
                                    )}
                                </div>
                            </div>
                            <div class="flex-1 min-w-0">
                                {job.position && job.position.length > 0 ? (
                                    <>
                                        <p class="font-semibold text-gray-900 dark:text-white">{job.position.join(", ")}</p>
                                        <p class="text-gray-900 dark:text-white">
                                            {job.companyUrl ? (
                                                <a href={`https://${job.companyUrl}`} target="_blank" rel="noopener noreferrer" class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">
                                                    {job.company}
                                                </a>
                                            ) : (
                                                job.company
                                            )}
                                            {job.location && `, ${job.location}`}
                                        </p>
                                    </>
                                ) : job.location ? (
                                    <>
                                        <p class="font-semibold text-gray-900 dark:text-white">{job.typeOfEmployment}</p>
                                        <p class="text-gray-900 dark:text-white">
                                            {job.companyUrl ? (
                                                <a href={`https://${job.companyUrl}`} target="_blank" rel="noopener noreferrer" class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">
                                                    {job.company}
                                                </a>
                                            ) : (
                                                job.company
                                            )}
                                            , {job.location}
                                        </p>
                                    </>
                                ) : (
                                    <p class="font-semibold text-gray-900 dark:text-white">
                                        {job.companyUrl ? (
                                            <a href={`https://${job.companyUrl}`} target="_blank" rel="noopener noreferrer" class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">
                                                {job.company}
                                            </a>
                                        ) : (
                                            job.company
                                        )}
                                    </p>
                                )}
                                {job.description?.list && job.description.list.length > 0 && (
                                    <ul class="mt-2 text-gray-900 dark:text-white space-y-1 list-disc pl-4">
                                        {job.description.list.map((item) => (
                                            <li>{item}</li>
                                        ))}
                                    </ul>
                                )}
                            </div>
                        </div>
                    </div>
                ))
            }
        </div>
    </section>

    <!-- Ausbildung -->
    <section class="mb-12">
        <h2 class="flex items-center gap-2 text-2xl font-bold text-gray-900 dark:text-white mb-6 pb-2 border-b border-gray-200 dark:border-gray-800"><Icon name="tabler:school" class="h-6 w-6 text-blue-600 dark:text-blue-400" /> Hochschulausbildung</h2>
        <div class="divide-y divide-gray-200 dark:divide-gray-800">
            {
                education.map((edu) => (
                    <div class="py-4 first:pt-0">
                        <div class="flex flex-col md:flex-row md:gap-8">
                            <div class="text-gray-900 dark:text-white md:w-25 md:shrink-0 mb-1 md:mb-0">
                                <span class="md:hidden">
                                    {formatDate(edu.startDate)} – {formatDate(edu.endDate)}
                                </span>
                                <div class="hidden md:block">
                                    <div>{formatDate(edu.startDate)}</div>
                                    <div>{formatDate(edu.endDate)}</div>
                                </div>
                            </div>
                            <div class="flex-1 min-w-0">
                                <p class="font-semibold text-gray-900 dark:text-white">
                                    {edu.fieldOfStudy}, {edu.degree}
                                </p>
                                <p class="text-gray-900 dark:text-white">
                                    {edu.schoolUrl ? (
                                        <a href={`https://${edu.schoolUrl}`} target="_blank" rel="noopener noreferrer" class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">
                                            {edu.school}
                                        </a>
                                    ) : (
                                        edu.school
                                    )}
                                    {edu.location && `, ${edu.location}`}
                                </p>
                                {edu.majorFieldOfStudy && <p class="text-gray-900 dark:text-white">Schwerpunkt: {edu.majorFieldOfStudy}</p>}
                                {edu.thesis?.title && (
                                    <p class="text-gray-900 dark:text-white mt-1">
                                        Thesis:{" "}
                                        {edu.thesis.fullTextUrl ? (
                                            <a href={edu.thesis.fullTextUrl} target="_blank" rel="noopener noreferrer" class="text-blue-600 dark:text-blue-400 hover:underline">
                                                {edu.thesis.title}
                                            </a>
                                        ) : (
                                            edu.thesis.title
                                        )}
                                    </p>
                                )}
                            </div>
                        </div>
                    </div>
                ))
            }
        </div>
    </section>

    <!-- Weiterbildung -->
    <section class="mb-12">
        <h2 class="flex items-center gap-2 text-2xl font-bold text-gray-900 dark:text-white mb-6 pb-2 border-b border-gray-200 dark:border-gray-800"><Icon name="tabler:certificate" class="h-6 w-6 text-blue-600 dark:text-blue-400" /> Zusatzqualifikationen</h2>
        <div class="divide-y divide-gray-200 dark:divide-gray-800">
            {
                furtherEducation.map((edu) => (
                    <div class="py-4 first:pt-0">
                        <div class="flex flex-col md:flex-row md:gap-8">
                            <div class="text-gray-900 dark:text-white md:w-25 md:shrink-0 mb-1 md:mb-0">
                                {formatDate(edu.startDate) === formatDate(edu.endDate) ? (
                                    <span>{formatDate(edu.startDate)}</span>
                                ) : (
                                    <>
                                        <span class="md:hidden">
                                            {formatDate(edu.startDate)} – {formatDate(edu.endDate)}
                                        </span>
                                        <div class="hidden md:block">
                                            <div>{formatDate(edu.startDate)}</div>
                                            <div>{formatDate(edu.endDate)}</div>
                                        </div>
                                    </>
                                )}
                            </div>
                            <div class="flex-1 min-w-0">
                                <p class="font-medium text-gray-900 dark:text-white">
                                    {edu.fieldOfStudy}
                                    {edu.degree && `, ${edu.degree}`}
                                </p>
                                <p class="text-gray-900 dark:text-white">
                                    {edu.schoolUrl ? (
                                        <a href={`https://${edu.schoolUrl}`} target="_blank" rel="noopener noreferrer" class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">
                                            {edu.school}
                                        </a>
                                    ) : (
                                        edu.school
                                    )}
                                    {edu.location && `, ${edu.location}`}
                                </p>
                                {edu.certificateUrl && (
                                    <a href={edu.certificateUrl} target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-1 mt-1 text-xs bg-blue-50 dark:bg-blue-950 text-blue-700 dark:text-blue-300 px-3 py-1 rounded-full hover:bg-blue-100 dark:hover:bg-blue-900 transition-colors">
                                        <Icon name="tabler:certificate" class="h-3.5 w-3.5" />
                                        Zertifikat ansehen
                                    </a>
                                )}
                            </div>
                        </div>
                    </div>
                ))
            }
        </div>
    </section>

    <!-- Projekte -->
    <section class="mb-12">
        <h2 class="flex items-center gap-2 text-2xl font-bold text-gray-900 dark:text-white mb-6 pb-2 border-b border-gray-200 dark:border-gray-800"><Icon name="tabler:code" class="h-6 w-6 text-blue-600 dark:text-blue-400" /> Projekte</h2>
        <div class="divide-y divide-gray-200 dark:divide-gray-800">
            {
                projects.map((project) => (
                    <div class="py-4 first:pt-0">
                        <div class="flex flex-col md:flex-row md:gap-8">
                            <div class="text-gray-900 dark:text-white md:w-25 md:shrink-0 mb-1 md:mb-0">{formatDate(project.date)}</div>
                            <div class="flex-1 min-w-0">
                                <p class="font-semibold text-gray-900 dark:text-white">{project.title}</p>
                                {project.description?.list && project.description.list.length > 0 && (
                                    <ul class="mt-2 text-gray-900 dark:text-white space-y-1 list-disc pl-4">
                                        {project.description.list.map((item) => (
                                            <li>{item}</li>
                                        ))}
                                    </ul>
                                )}
                                {project.githubUrl && (
                                    <a href={`https://${project.githubUrl}`} target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-1 mt-2 text-xs bg-blue-50 dark:bg-blue-950 text-blue-700 dark:text-blue-300 px-3 py-1 rounded-full hover:bg-blue-100 dark:hover:bg-blue-900 transition-colors">
                                        <Icon name="tabler:brand-github" class="h-3.5 w-3.5" />
                                        GitHub
                                    </a>
                                )}
                            </div>
                        </div>
                    </div>
                ))
            }
        </div>
    </section>

    <!-- Kenntnisse -->
    <section class="mb-12">
        <h2 class="flex items-center gap-2 text-2xl font-bold text-gray-900 dark:text-white mb-6 pb-2 border-b border-gray-200 dark:border-gray-800"><Icon name="tabler:brain" class="h-6 w-6 text-blue-600 dark:text-blue-400" /> Kenntnisse</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
            {
                skills.map((cat) => (
                    <div>
                        <h3 class="text-sm font-semibold text-gray-900 dark:text-white uppercase tracking-wide mb-2">{cat.catagorie}</h3>
                        <div class="flex flex-wrap gap-2">
                            {cat.items.map((item) => (
                                <span class="bg-gray-100 dark:bg-gray-800 text-gray-900 dark:text-white text-sm px-3 py-1 rounded-full">{item}</span>
                            ))}
                        </div>
                    </div>
                ))
            }
        </div>
    </section>

    <!-- Referenzen -->
    <section>
        <h2 class="flex items-center gap-2 text-2xl font-bold text-gray-900 dark:text-white mb-6 pb-2 border-b border-gray-200 dark:border-gray-800"><Icon name="tabler:users" class="h-6 w-6 text-blue-600 dark:text-blue-400" /> Referenzen</h2>
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
            {
                references.map((ref) => (
                    <div class="p-4 bg-gray-50 dark:bg-gray-800/50 rounded-xl border border-gray-200 dark:border-gray-700">
                        <p class="font-semibold text-gray-900 dark:text-white">{ref.name}</p>
                        <p class="text-gray-900 dark:text-white">{ref.position}</p>
                        <p class="text-gray-900 dark:text-white">{ref.company}</p>
                        {ref.department && <p class="text-gray-900 dark:text-white">{ref.department}</p>}
                        <a href={`mailto:${ref.email}`} class="inline-flex items-center gap-1.5 text-blue-600 dark:text-blue-400 hover:underline mt-1">
                            <Icon name="tabler:mail" class="h-4 w-4 shrink-0" />
                            {ref.email}
                        </a>
                    </div>
                ))
            }
        </div>
    </section>
</PageLayout>
