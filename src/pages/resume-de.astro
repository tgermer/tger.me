---
import ResumeLayout from "../layouts/ResumeLayout.astro";
import { site } from "../data/site";
import { experience, education, furtherEducation, skills, projects, references } from "../data/cv_de";

function formatDate(dateStr: string): string {
    if (!dateStr) return "";
    const [year, month] = dateStr.split("-");
    return `${month}/${year}`;
}
---

<ResumeLayout title="Lebenslauf – Tristan Germer" description="Lebenslauf von Tristan Germer – Berufserfahrung, Ausbildung und Kenntnisse." lang="de">

    <!-- Print toolbar (hidden in print) -->
    <div class="resume-toolbar">
        <div class="max-w-[210mm] mx-auto px-6 py-3 flex items-center justify-between">
            <a href="/cv-de" class="text-sm text-gray-500 hover:text-gray-900 transition-colors">&larr; Zurück zum Lebenslauf</a>
            <div class="flex items-center gap-3">
                <a href="/resume-en" id="lang-switch" class="text-sm px-3 py-1.5 border border-gray-300 rounded-full hover:bg-gray-50 transition-colors">English</a>
                <button onclick="window.print()" class="text-sm px-4 py-1.5 bg-blue-600 text-white rounded-full hover:bg-blue-700 transition-colors">Drucken / PDF</button>
            </div>
        </div>
    </div>

    <!-- Cover Page -->
    <div class="resume-page resume-cover">
        <div class="cover-content">
            <img src="/assets/2025-09-02 Google Gemini 2.5 Flash.JPG" alt="Tristan Germer" class="cover-photo" />
            <h1 class="cover-name">Tristan Germer</h1>
            <p class="cover-degree">M.Sc. Technische Kommunikation</p>

            <div class="cover-contact">
                <span>{site.email}</span>
                <span class="cover-sep">&middot;</span>
                <span>{site.phone}</span>
                <span class="cover-sep">&middot;</span>
                <span>München</span>
            </div>
            <div class="cover-contact">
                <span>tger.me</span>
                <span class="cover-sep">&middot;</span>
                <span>linkedin.com/in/tgermer</span>
            </div>

            <div class="cover-position" id="cover-position" style="display:none;">
                <p class="cover-position-label">Bewerbung als</p>
                <p class="cover-position-title" id="position-title"></p>
                <p class="cover-position-company" id="position-company"></p>
            </div>
        </div>
    </div>

    <!-- CV Content -->
    <div class="resume-page">
        <!-- Berufserfahrung -->
        <section class="resume-section">
            <h2 class="resume-heading">Beruflicher Werdegang</h2>
            {experience.map((job) => (
                <div class="resume-entry">
                    <div class="resume-date">
                        {job.endDate
                            ? `${formatDate(job.startDate)} – ${formatDate(job.endDate)}`
                            : `Seit ${formatDate(job.startDate)}`}
                    </div>
                    <div class="resume-detail">
                        {job.position && job.position.length > 0 ? (
                            <>
                                <p class="resume-entry-title">{job.position.join(", ")}</p>
                                <p class="resume-entry-sub">
                                    {job.company}{job.location && `, ${job.location}`}
                                    <span class="resume-employment-type"> &middot; {job.typeOfEmployment}</span>
                                </p>
                            </>
                        ) : (
                            <>
                                <p class="resume-entry-title">{job.company}</p>
                                {job.location && <p class="resume-entry-sub">{job.location} &middot; {job.typeOfEmployment}</p>}
                                {!job.location && <p class="resume-entry-sub">{job.typeOfEmployment}</p>}
                            </>
                        )}
                        {job.description?.list && job.description.list.length > 0 && (
                            <ul class="resume-list">
                                {job.description.list.map((item) => <li>{item}</li>)}
                            </ul>
                        )}
                    </div>
                </div>
            ))}
        </section>

        <!-- Hochschulausbildung -->
        <section class="resume-section">
            <h2 class="resume-heading">Hochschulausbildung</h2>
            {education.map((edu) => (
                <div class="resume-entry">
                    <div class="resume-date">{formatDate(edu.startDate)} – {formatDate(edu.endDate)}</div>
                    <div class="resume-detail">
                        <p class="resume-entry-title">{edu.fieldOfStudy}, {edu.degree}</p>
                        <p class="resume-entry-sub">{edu.school}{edu.location && `, ${edu.location}`}</p>
                        {edu.majorFieldOfStudy && <p class="resume-entry-meta">Schwerpunkt: {edu.majorFieldOfStudy}</p>}
                        {edu.thesis?.title && <p class="resume-entry-meta">Thesis: {edu.thesis.title}</p>}
                    </div>
                </div>
            ))}
        </section>

        <!-- Zusatzqualifikationen -->
        <section class="resume-section">
            <h2 class="resume-heading">Zusatzqualifikationen</h2>
            {furtherEducation.map((edu) => (
                <div class="resume-entry">
                    <div class="resume-date">
                        {formatDate(edu.startDate) === formatDate(edu.endDate)
                            ? formatDate(edu.startDate)
                            : `${formatDate(edu.startDate)} – ${formatDate(edu.endDate)}`}
                    </div>
                    <div class="resume-detail">
                        <p class="resume-entry-title">{edu.fieldOfStudy}{edu.degree && `, ${edu.degree}`}</p>
                        <p class="resume-entry-sub">{edu.school}{edu.location && `, ${edu.location}`}</p>
                    </div>
                </div>
            ))}
        </section>

        <!-- Projekte -->
        <section class="resume-section">
            <h2 class="resume-heading">Projekte</h2>
            {projects.map((project) => (
                <div class="resume-entry">
                    <div class="resume-date">{formatDate(project.date)}</div>
                    <div class="resume-detail">
                        <p class="resume-entry-title">{project.title}</p>
                        {project.description?.list && project.description.list.length > 0 && (
                            <ul class="resume-list">
                                {project.description.list.map((item) => <li>{item}</li>)}
                            </ul>
                        )}
                    </div>
                </div>
            ))}
        </section>

        <!-- Kenntnisse -->
        <section class="resume-section">
            <h2 class="resume-heading">Kenntnisse</h2>
            <div class="resume-skills-grid">
                {skills.map((cat) => (
                    <div class="resume-skill-group">
                        <h3 class="resume-skill-label">{cat.catagorie}</h3>
                        <p class="resume-skill-items">{cat.items.join(" · ")}</p>
                    </div>
                ))}
            </div>
        </section>

        <!-- Referenzen -->
        <section class="resume-section">
            <h2 class="resume-heading">Referenzen</h2>
            <div class="resume-references">
                {references.map((ref) => (
                    <div class="resume-reference">
                        <p class="resume-entry-title">{ref.name}</p>
                        <p class="resume-entry-sub">{ref.position}, {ref.company}</p>
                        {ref.department && <p class="resume-entry-meta">{ref.department}</p>}
                        <p class="resume-entry-meta">{ref.email}</p>
                    </div>
                ))}
            </div>
        </section>
    </div>

    <script>
        const params = new URLSearchParams(window.location.search);
        const position = params.get("position");
        const company = params.get("company");

        if (position || company) {
            const block = document.getElementById("cover-position");
            const titleEl = document.getElementById("position-title");
            const companyEl = document.getElementById("position-company");
            if (block) block.style.display = "block";
            if (titleEl && position) titleEl.textContent = position;
            if (companyEl && company) companyEl.textContent = `bei ${company}`;
        }

        // Forward query params to language switch link
        const langLink = document.getElementById("lang-switch") as HTMLAnchorElement;
        if (langLink && window.location.search) {
            langLink.href = `/resume-en${window.location.search}`;
        }
    </script>
</ResumeLayout>
