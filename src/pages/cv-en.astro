---
import PageLayout from '../layouts/PageLayout.astro';
import { experience, education, furtherEducation, skills, projects, references } from '../data/cv_en';

function formatDate(dateStr: string): string {
  if (!dateStr) return '';
  const [year, month] = dateStr.split('-');
  return `${month}/${year}`;
}
---

<PageLayout title="Curriculum Vitae" description="CV of Tristan Germer – Work experience, education and skills.">

  <!-- Language switcher -->
  <div class="flex gap-2 mb-8">
    <a href="/cv-de" class="px-4 py-1.5 border border-gray-300 dark:border-gray-700 text-sm font-medium rounded-full hover:bg-gray-50 dark:hover:bg-gray-900 transition-colors">
      Deutsch
    </a>
    <span class="px-4 py-1.5 bg-blue-600 text-white text-sm font-medium rounded-full">English</span>
  </div>

  <!-- Work Experience -->
  <section class="mb-12">
    <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6 pb-2 border-b border-gray-200 dark:border-gray-800">
      Work Experience
    </h2>
    <div class="divide-y divide-gray-200 dark:divide-gray-800">
      {experience.map((job) => (
        <div class="py-4 first:pt-0">
          <div class="flex flex-col md:flex-row md:gap-8">
            <div class="text-gray-900 dark:text-white md:w-25 md:shrink-0 mb-1 md:mb-0">
              <span class="md:hidden">
                {job.endDate
                  ? `${formatDate(job.startDate)} – ${formatDate(job.endDate)}`
                  : `Since ${formatDate(job.startDate)}`
                }
              </span>
              <div class="hidden md:block">
                {job.endDate ? (
                  <>
                    <div>{formatDate(job.startDate)}</div>
                    <div>{formatDate(job.endDate)}</div>
                  </>
                ) : (
                  <>
                    <div>Since</div>
                    <div>{formatDate(job.startDate)}</div>
                  </>
                )}
              </div>
            </div>
            <div class="flex-1 min-w-0">
              {job.position && job.position.length > 0 ? (
                <>
                  <p class="font-semibold text-gray-900 dark:text-white">{job.position.join(', ')}</p>
                  <p class="text-gray-900 dark:text-white">
                    {job.companyUrl
                      ? <a href={`https://${job.companyUrl}`} target="_blank" rel="noopener noreferrer" class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">{job.company}</a>
                      : job.company
                    }{job.location && `, ${job.location}`}
                  </p>
                </>
              ) : job.location ? (
                <>
                  <p class="font-semibold text-gray-900 dark:text-white">{job.typeOfEmployment}</p>
                  <p class="text-gray-900 dark:text-white">
                    {job.companyUrl
                      ? <a href={`https://${job.companyUrl}`} target="_blank" rel="noopener noreferrer" class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">{job.company}</a>
                      : job.company
                    }, {job.location}
                  </p>
                </>
              ) : (
                <p class="font-semibold text-gray-900 dark:text-white">
                  {job.companyUrl
                    ? <a href={`https://${job.companyUrl}`} target="_blank" rel="noopener noreferrer" class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">{job.company}</a>
                    : job.company
                  }
                </p>
              )}
              {job.description?.list && job.description.list.length > 0 && (
                <ul class="mt-2 text-gray-900 dark:text-white space-y-1 list-disc pl-4">
                  {job.description.list.map((item) => <li>{item}</li>)}
                </ul>
              )}
            </div>
          </div>
        </div>
      ))}
    </div>
  </section>

  <!-- Education -->
  <section class="mb-12">
    <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6 pb-2 border-b border-gray-200 dark:border-gray-800">
      Education
    </h2>
    <div class="divide-y divide-gray-200 dark:divide-gray-800">
      {education.map((edu) => (
        <div class="py-4 first:pt-0">
          <div class="flex flex-col md:flex-row md:gap-8">
            <div class="text-gray-900 dark:text-white md:w-25 md:shrink-0 mb-1 md:mb-0">
              <span class="md:hidden">{formatDate(edu.startDate)} – {formatDate(edu.endDate)}</span>
              <div class="hidden md:block">
                <div>{formatDate(edu.startDate)}</div>
                <div>{formatDate(edu.endDate)}</div>
              </div>
            </div>
            <div class="flex-1 min-w-0">
              <p class="font-semibold text-gray-900 dark:text-white">{edu.fieldOfStudy}, {edu.degree}</p>
              <p class="text-gray-900 dark:text-white">
                {edu.schoolUrl
                  ? <a href={`https://${edu.schoolUrl}`} target="_blank" rel="noopener noreferrer" class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">{edu.school}</a>
                  : edu.school
                }{edu.location && `, ${edu.location}`}
              </p>
              {edu.majorFieldOfStudy && (
                <p class="text-gray-900 dark:text-white">Focus: {edu.majorFieldOfStudy}</p>
              )}
              {edu.thesis?.title && (
                <p class="text-gray-900 dark:text-white mt-1">
                  Thesis: {edu.thesis.fullTextUrl
                    ? <a href={edu.thesis.fullTextUrl} target="_blank" rel="noopener noreferrer" class="text-blue-600 dark:text-blue-400 hover:underline">{edu.thesis.title}</a>
                    : edu.thesis.title
                  }
                </p>
              )}
            </div>
          </div>
        </div>
      ))}
    </div>
  </section>

  <!-- Further Education -->
  <section class="mb-12">
    <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6 pb-2 border-b border-gray-200 dark:border-gray-800">
      Further Education
    </h2>
    <div class="divide-y divide-gray-200 dark:divide-gray-800">
      {furtherEducation.map((edu) => (
        <div class="py-4 first:pt-0">
          <div class="flex flex-col md:flex-row md:gap-8">
            <div class="text-gray-900 dark:text-white md:w-25 md:shrink-0 mb-1 md:mb-0">
              {formatDate(edu.startDate) === formatDate(edu.endDate) ? (
                <span>{formatDate(edu.startDate)}</span>
              ) : (
                <>
                  <span class="md:hidden">{formatDate(edu.startDate)} – {formatDate(edu.endDate)}</span>
                  <div class="hidden md:block">
                    <div>{formatDate(edu.startDate)}</div>
                    <div>{formatDate(edu.endDate)}</div>
                  </div>
                </>
              )}
            </div>
            <div class="flex-1 min-w-0">
              <p class="font-medium text-gray-900 dark:text-white">
                {edu.fieldOfStudy}{edu.degree && `, ${edu.degree}`}
              </p>
              <p class="text-gray-900 dark:text-white">
                {edu.schoolUrl
                  ? <a href={`https://${edu.schoolUrl}`} target="_blank" rel="noopener noreferrer" class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">{edu.school}</a>
                  : edu.school
                }{edu.location && `, ${edu.location}`}
              </p>
              {edu.certificateUrl && (
                <a href={edu.certificateUrl} target="_blank" rel="noopener noreferrer" class="inline-block mt-1 text-xs bg-blue-50 dark:bg-blue-950 text-blue-700 dark:text-blue-300 px-3 py-1 rounded-full hover:bg-blue-100 dark:hover:bg-blue-900 transition-colors">
                  View certificate →
                </a>
              )}
            </div>
          </div>
        </div>
      ))}
    </div>
  </section>

  <!-- Projects -->
  <section class="mb-12">
    <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6 pb-2 border-b border-gray-200 dark:border-gray-800">
      Projects
    </h2>
    <div class="divide-y divide-gray-200 dark:divide-gray-800">
      {projects.map((project) => (
        <div class="py-4 first:pt-0">
          <div class="flex flex-col md:flex-row md:gap-8">
            <div class="text-gray-900 dark:text-white md:w-25 md:shrink-0 mb-1 md:mb-0">
              {formatDate(project.date)}
            </div>
            <div class="flex-1 min-w-0">
              <p class="font-semibold text-gray-900 dark:text-white">{project.title}</p>
              {project.description?.list && project.description.list.length > 0 && (
                <ul class="mt-2 text-gray-900 dark:text-white space-y-1 list-disc pl-4">
                  {project.description.list.map((item) => <li>{item}</li>)}
                </ul>
              )}
              {project.githubUrl && (
                <a href={`https://${project.githubUrl}`} target="_blank" rel="noopener noreferrer" class="inline-block mt-2 text-xs bg-blue-50 dark:bg-blue-950 text-blue-700 dark:text-blue-300 px-3 py-1 rounded-full hover:bg-blue-100 dark:hover:bg-blue-900 transition-colors">
                  GitHub →
                </a>
              )}
            </div>
          </div>
        </div>
      ))}
    </div>
  </section>

  <!-- Skills -->
  <section class="mb-12">
    <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6 pb-2 border-b border-gray-200 dark:border-gray-800">
      Skills
    </h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
      {skills.map((cat) => (
        <div>
          <h3 class="text-sm font-semibold text-gray-900 dark:text-white uppercase tracking-wide mb-2">{cat.catagorie}</h3>
          <div class="flex flex-wrap gap-2">
            {cat.items.map((item) => (
              <span class="bg-gray-100 dark:bg-gray-800 text-gray-900 dark:text-white text-sm px-3 py-1 rounded-full">
                {item}
              </span>
            ))}
          </div>
        </div>
      ))}
    </div>
  </section>

  <!-- References -->
  <section>
    <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6 pb-2 border-b border-gray-200 dark:border-gray-800">
      References
    </h2>
    <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
      {references.map((ref) => (
        <div class="p-4 bg-gray-50 dark:bg-gray-800/50 rounded-xl border border-gray-200 dark:border-gray-700">
          <p class="font-semibold text-gray-900 dark:text-white">{ref.name}</p>
          <p class="text-gray-900 dark:text-white">{ref.position}</p>
          <p class="text-gray-900 dark:text-white">{ref.company}</p>
          {ref.department && <p class="text-gray-900 dark:text-white">{ref.department}</p>}
          <a href={`mailto:${ref.email}`} class="text-blue-600 dark:text-blue-400 hover:underline mt-1 block">{ref.email}</a>
        </div>
      ))}
    </div>
  </section>
</PageLayout>
