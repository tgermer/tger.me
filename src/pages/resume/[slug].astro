---
import ResumeLayout from "../../layouts/ResumeLayout.astro";
import { getCollection } from "astro:content";
import { site } from "../../data/site";
import * as cvDe from "../../data/cv_de";
import * as cvEn from "../../data/cv_en";

export async function getStaticPaths() {
    const resumes = await getCollection("resume");
    return resumes.map((resume) => ({
        params: { slug: resume.slug },
        props: { resume },
    }));
}

const { resume } = Astro.props;
const { position, company, lang, date } = resume.data;

const isDE = lang === "de";
const cv = isDE ? cvDe : cvEn;

// Labels based on language
const labels = isDE
    ? {
          backLabel: "Zurück zum Lebenslauf",
          backHref: "/cv-de",
          printLabel: "Drucken / PDF",
          applicationFor: "Bewerbung als",
          atCompany: `bei ${company}`,
          experienceHeading: "Beruflicher Werdegang",
          educationHeading: "Hochschulausbildung",
          furtherEducationHeading: "Zusatzqualifikationen",
          projectsHeading: "Projekte",
          skillsHeading: "Kenntnisse",
          referencesHeading: "Referenzen",
          since: "Seit",
          major: "Schwerpunkt",
          thesis: "Thesis",
          location: "München",
          degree: "M.Sc. Technische Kommunikation",
      }
    : {
          backLabel: "Back to CV",
          backHref: "/cv-en",
          printLabel: "Print / PDF",
          applicationFor: "Application for",
          atCompany: `at ${company}`,
          experienceHeading: "Professional Experience",
          educationHeading: "University Education",
          furtherEducationHeading: "Additional Qualifications",
          projectsHeading: "Projects",
          skillsHeading: "Skills",
          referencesHeading: "References",
          since: "Since",
          major: "Major",
          thesis: "Thesis",
          location: "Munich, Germany",
          degree: "M.Sc. Technical Communication",
      };

function formatDate(dateStr: string): string {
    if (!dateStr) return "";
    const [year, month] = dateStr.split("-");
    return `${month}/${year}`;
}

const pageTitle = isDE
    ? `Lebenslauf – Tristan Germer – ${position}`
    : `Resume – Tristan Germer – ${position}`;
---

<ResumeLayout title={pageTitle} description={`${position} – ${company}`} lang={lang}>

    <!-- Print toolbar (hidden in print) -->
    <div class="resume-toolbar">
        <div class="max-w-[210mm] mx-auto px-6 py-3 flex items-center justify-between">
            <a href={labels.backHref} class="text-sm text-gray-500 hover:text-gray-900 transition-colors">&larr; {labels.backLabel}</a>
            <button onclick="window.print()" class="text-sm px-4 py-1.5 bg-blue-600 text-white rounded-full hover:bg-blue-700 transition-colors">{labels.printLabel}</button>
        </div>
    </div>

    <!-- Cover Page -->
    <div class="resume-page resume-cover">
        <div class="cover-content">
            <img src="/assets/2025-09-02 Google Gemini 2.5 Flash.JPG" alt="Tristan Germer" class="cover-photo" />
            <h1 class="cover-name">Tristan Germer</h1>
            <p class="cover-degree">{labels.degree}</p>

            <div class="cover-contact">
                <span>{site.email}</span>
                <span class="cover-sep">&middot;</span>
                <span>{site.phone}</span>
                <span class="cover-sep">&middot;</span>
                <span>{labels.location}</span>
            </div>
            <div class="cover-contact">
                <span>tger.me</span>
                <span class="cover-sep">&middot;</span>
                <span>linkedin.com/in/tgermer</span>
            </div>

            <div class="cover-position">
                <p class="cover-position-label">{labels.applicationFor}</p>
                <p class="cover-position-title">{position}</p>
                <p class="cover-position-company">{labels.atCompany}</p>
            </div>
        </div>
    </div>

    <!-- CV Content -->
    <div class="resume-page">
        <!-- Berufserfahrung -->
        <section class="resume-section">
            <h2 class="resume-heading">{labels.experienceHeading}</h2>
            {cv.experience.map((job) => (
                <div class="resume-entry">
                    <div class="resume-date">
                        {job.endDate
                            ? `${formatDate(job.startDate)} – ${formatDate(job.endDate)}`
                            : `${labels.since} ${formatDate(job.startDate)}`}
                    </div>
                    <div class="resume-detail">
                        {job.position && job.position.length > 0 ? (
                            <>
                                <p class="resume-entry-title">{job.position.join(", ")}</p>
                                <p class="resume-entry-sub">
                                    {job.company}{job.location && `, ${job.location}`}
                                    <span class="resume-employment-type"> &middot; {job.typeOfEmployment}</span>
                                </p>
                            </>
                        ) : (
                            <>
                                <p class="resume-entry-title">{job.company}</p>
                                {job.location && <p class="resume-entry-sub">{job.location} &middot; {job.typeOfEmployment}</p>}
                                {!job.location && <p class="resume-entry-sub">{job.typeOfEmployment}</p>}
                            </>
                        )}
                        {job.description?.list && job.description.list.length > 0 && (
                            <ul class="resume-list">
                                {job.description.list.map((item) => <li>{item}</li>)}
                            </ul>
                        )}
                    </div>
                </div>
            ))}
        </section>

        <!-- Hochschulausbildung -->
        <section class="resume-section">
            <h2 class="resume-heading">{labels.educationHeading}</h2>
            {cv.education.map((edu) => (
                <div class="resume-entry">
                    <div class="resume-date">{formatDate(edu.startDate)} – {formatDate(edu.endDate)}</div>
                    <div class="resume-detail">
                        <p class="resume-entry-title">{edu.fieldOfStudy}, {edu.degree}</p>
                        <p class="resume-entry-sub">{edu.school}{edu.location && `, ${edu.location}`}</p>
                        {edu.majorFieldOfStudy && <p class="resume-entry-meta">{labels.major}: {edu.majorFieldOfStudy}</p>}
                        {edu.thesis?.title && <p class="resume-entry-meta">{labels.thesis}: {edu.thesis.title}</p>}
                    </div>
                </div>
            ))}
        </section>

        <!-- Zusatzqualifikationen -->
        <section class="resume-section">
            <h2 class="resume-heading">{labels.furtherEducationHeading}</h2>
            {cv.furtherEducation.map((edu) => (
                <div class="resume-entry">
                    <div class="resume-date">
                        {formatDate(edu.startDate) === formatDate(edu.endDate)
                            ? formatDate(edu.startDate)
                            : `${formatDate(edu.startDate)} – ${formatDate(edu.endDate)}`}
                    </div>
                    <div class="resume-detail">
                        <p class="resume-entry-title">{edu.fieldOfStudy}{edu.degree && `, ${edu.degree}`}</p>
                        <p class="resume-entry-sub">{edu.school}{edu.location && `, ${edu.location}`}</p>
                    </div>
                </div>
            ))}
        </section>

        <!-- Projekte -->
        <section class="resume-section">
            <h2 class="resume-heading">{labels.projectsHeading}</h2>
            {cv.projects.map((project) => (
                <div class="resume-entry">
                    <div class="resume-date">{formatDate(project.date)}</div>
                    <div class="resume-detail">
                        <p class="resume-entry-title">{project.title}</p>
                        {project.description?.list && project.description.list.length > 0 && (
                            <ul class="resume-list">
                                {project.description.list.map((item) => <li>{item}</li>)}
                            </ul>
                        )}
                    </div>
                </div>
            ))}
        </section>

        <!-- Kenntnisse -->
        <section class="resume-section">
            <h2 class="resume-heading">{labels.skillsHeading}</h2>
            <div class="resume-skills-grid">
                {cv.skills.map((cat) => (
                    <div class="resume-skill-group">
                        <h3 class="resume-skill-label">{cat.catagorie}</h3>
                        <p class="resume-skill-items">{cat.items.join(" · ")}</p>
                    </div>
                ))}
            </div>
        </section>

        <!-- Referenzen -->
        <section class="resume-section">
            <h2 class="resume-heading">{labels.referencesHeading}</h2>
            <div class="resume-references">
                {cv.references.map((ref) => (
                    <div class="resume-reference">
                        <p class="resume-entry-title">{ref.name}</p>
                        <p class="resume-entry-sub">{ref.position}, {ref.company}</p>
                        {ref.department && <p class="resume-entry-meta">{ref.department}</p>}
                        <p class="resume-entry-meta">{ref.email}</p>
                    </div>
                ))}
            </div>
        </section>
    </div>
</ResumeLayout>
