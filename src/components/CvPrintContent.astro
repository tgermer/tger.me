---
import { Image } from "astro:assets";
import ResumeLayout from "../layouts/ResumeLayout.astro";
import { Icon } from "astro-icon/components";
import { t, type Lang } from "../data/i18n";
import * as cvDe from "../data/cv_de";
import * as cvEn from "../data/cv_en";

interface Props {
    lang: Lang;
}

const { lang } = Astro.props;
const l = t(lang);
const cv = lang === "de" ? cvDe : cvEn;
const { basics, work, education, certificates, skills, languages, projects } = cv;
const otherLang = lang === "de" ? "en" : "de";

const imageModules = import.meta.glob<{ default: ImageMetadata }>("../assets/apply/*.{jpg,jpeg,png}", { eager: true });
const photoKey = `../assets/apply/${basics.image}`;
const photoModule = imageModules[photoKey];
if (!photoModule) throw new Error(`Photo not found: src/assets/apply/${basics.image}`);
const photoImage = photoModule.default;

const fmtAddr = (loc: typeof basics.location) => `${loc.address}, ${loc.postalCode} ${loc.city}`;

function formatDate(dateStr: string): string {
    if (!dateStr) return "";
    const [year, month] = dateStr.split("-");
    return `${month}/${year}`;
}

const today = new Date().toLocaleDateString(l.cvPrintDateLocale, { day: "numeric", month: "long", year: "numeric" });
---

<ResumeLayout title={l.cvPrintPageTitle} description={l.cvPrintPageDescription} lang={lang}>
    <!-- Print toolbar -->
    <div class="resume-toolbar">
        <div class="max-w-[210mm] mx-auto px-6 py-3 flex items-center justify-between">
            <a href={`/${lang}/cv`} class="text-sm text-gray-500 hover:text-gray-900 transition-colors">&larr; {l.cvPrintBackLabel}</a>
            <div class="flex items-center gap-3">
                <a href={`/${otherLang}/cv-print`} class="text-sm px-3 py-1.5 border border-gray-300 rounded-full hover:bg-gray-50 transition-colors">{l.cvPrintLangSwitchLabel}</a>
                <a href={l.cvPrintPdfHref} target="_blank" class="inline-flex items-center gap-1.5 text-sm px-4 py-1.5 bg-blue-600 text-white rounded-full hover:bg-blue-700 transition-colors">
                    <Icon name="tabler:file-type-pdf" class="h-4 w-4" />
                    {l.cvPrintDownloadLabel}
                </a>
            </div>
        </div>
    </div>

    <!-- Cover Page -->
    <div class="resume-page resume-cover">
        <div class="cover-header-bar"></div>

        <div class="cover-application">
            <h1 class="cover-application-title" style="margin-top: 1rem; font-size: 1.75rem;">{l.cvPrintCoverTitle}</h1>
        </div>

        <div class="cover-bottom">
            <Image src={photoImage} alt={basics.name} class="cover-photo" />
            <h2 class="cover-name">{basics.name}</h2>
            <p class="cover-tagline">{basics.label}</p>

            <table class="cover-data-table">
                <tr>
                    <td class="cover-data-label">{l.cvPrintBirthdayLabel}</td>
                    <td class="cover-data-value">{basics.birthdate}</td>
                </tr>
                <tr>
                    <td class="cover-data-label">{l.cvPrintLanguagesLabel}</td>
                    <td class="cover-data-value">{languages.map(l => `${l.language} (${l.fluency})`).join(", ")}</td>
                </tr>
                <tr>
                    <td class="cover-data-label">{l.cvPrintResidenceLabel}</td>
                    <td class="cover-data-value">{fmtAddr(basics.location)}</td>
                </tr>
                <tr>
                    <td class="cover-data-label">{l.cvPrintContactLabel}</td>
                    <td class="cover-data-value"><a href={`tel:${basics.phone}`} target="_blank" rel="noopener noreferrer">{basics.phone}</a> | <a href={`mailto:${basics.email}`} target="_blank" rel="noopener noreferrer">{basics.email}</a></td>
                </tr>
                {
                    (basics.url || basics.profiles?.length) && (
                        <tr>
                            <td class="cover-data-label">{l.cvPrintOnlineLabel}</td>
                            <td class="cover-data-value">
                                {[
                                    basics.url && (
                                        <a href={`https://${basics.url}`} target="_blank" rel="noopener noreferrer">
                                            {basics.url}
                                        </a>
                                    ),
                                    ...(basics.profiles?.map((prof) => (
                                        <a href={`https://${prof.url}`} target="_blank" rel="noopener noreferrer">
                                            {prof.url}
                                        </a>
                                    )) || []),
                                ]
                                    .filter(Boolean)
                                    .reduce((acc, el, i) => (i === 0 ? [el] : [...acc, " · ", el]), [] as any[])}
                            </td>
                        </tr>
                    )
                }
            </table>
        </div>
    </div>

    <!-- CV Content -->
    <div class="resume-page resume-cv-content">
        <div class="cv-page-header">
            <span>{l.cvPrintPageHeader}</span>
        </div>

        <section class="resume-section">
            <h2 class="resume-heading">{l.cvPrintExperienceHeading}</h2>
            <table class="resume-table">
                {
                    work.map((job, i) => (
                        <tr class:list={["resume-entry", { "resume-entry-border": i > 0 }]}>
                            <td class="resume-date">
                                {job.endDate ? (
                                    <>
                                        {formatDate(job.startDate)}
                                        <br />
                                        {formatDate(job.endDate)}
                                    </>
                                ) : (
                                    `${l.cvPrintSince} ${formatDate(job.startDate)}`
                                )}
                            </td>
                            <td class="resume-detail">
                                {job.position && job.position.length > 0 ? (
                                    <>
                                        <p class="resume-entry-title">{job.position.join(", ")}</p>
                                        <p class="resume-entry-sub">
                                            {job.name}
                                            {job.location && `, ${job.location}`}
                                            <span class="resume-employment-type"> · {job.typeOfEmployment}</span>
                                        </p>
                                    </>
                                ) : (
                                    <>
                                        <p class="resume-entry-title">{job.name}</p>
                                        {job.location && (
                                            <p class="resume-entry-sub">
                                                {job.location} · {job.typeOfEmployment}
                                            </p>
                                        )}
                                        {!job.location && <p class="resume-entry-sub">{job.typeOfEmployment}</p>}
                                    </>
                                )}
                                {job.highlights && job.highlights.length > 0 && (
                                    <ul class="resume-list">
                                        {job.highlights.map((item) => (
                                            <li>{item}</li>
                                        ))}
                                    </ul>
                                )}
                            </td>
                        </tr>
                    ))
                }
            </table>
        </section>

        <section class="resume-section">
            <h2 class="resume-heading">{l.cvPrintEducationHeading}</h2>
            <table class="resume-table">
                {
                    education.map((edu, i) => (
                        <tr class:list={["resume-entry", { "resume-entry-border": i > 0 }]}>
                            <td class="resume-date">
                                {formatDate(edu.startDate)}
                                <br />
                                {formatDate(edu.endDate)}
                            </td>
                            <td class="resume-detail-mid">
                                <p class="resume-entry-title">
                                    {edu.area}, {edu.studyType}
                                </p>
                                {edu.majorFieldOfStudy && <p class="resume-entry-meta">{l.cvPrintMajorLabel} {edu.majorFieldOfStudy}</p>}
                                {edu.thesis?.title && <p class="resume-entry-meta">Thesis: {edu.thesis.title}</p>}
                            </td>
                            <td class="resume-detail-right">
                                <p class="resume-entry-sub">{edu.institution}</p>
                                {edu.location && <p class="resume-entry-meta">{edu.location}</p>}
                            </td>
                        </tr>
                    ))
                }
            </table>
        </section>

        <section class="resume-section">
            <h2 class="resume-heading">{l.cvPrintFurtherEducationHeading}</h2>
            <table class="resume-table">
                {
                    certificates.map((cert, i) => (
                        <tr class:list={["resume-entry", { "resume-entry-border": i > 0 }]}>
                            <td class="resume-date">
                                {formatDate(cert.startDate) === formatDate(cert.endDate) ? (
                                    formatDate(cert.startDate)
                                ) : (
                                    <>
                                        {formatDate(cert.startDate)}
                                        <br />
                                        {formatDate(cert.endDate)}
                                    </>
                                )}
                            </td>
                            <td class="resume-detail-mid">
                                <p class="resume-entry-title">
                                    {cert.name}
                                    {cert.degree && `, ${cert.degree}`}
                                </p>
                            </td>
                            <td class="resume-detail-right">
                                <p class="resume-entry-sub">{cert.issuer}</p>
                                {cert.location && <p class="resume-entry-meta">{cert.location}</p>}
                            </td>
                        </tr>
                    ))
                }
            </table>
        </section>

        {
            projects?.length > 0 && (
                <section class="resume-section">
                    <h2 class="resume-heading">{l.cvPrintProjectsHeading}</h2>
                    <table class="resume-table">
                        {projects.map((project, i) => (
                            <tr class:list={["resume-entry", { "resume-entry-border": i > 0 }]}>
                                <td class="resume-date">{formatDate(project.startDate)}</td>
                                <td class="resume-detail">
                                    <p class="resume-entry-title">{project.name}</p>
                                    {project.highlights && project.highlights.length > 0 && (
                                        <ul class="resume-list">
                                            {project.highlights.map((item) => (
                                                <li>{item}</li>
                                            ))}
                                        </ul>
                                    )}
                                </td>
                            </tr>
                        ))}
                    </table>
                </section>
            )
        }

        {
            skills?.length > 0 && (
                <section class="resume-section">
                    <h2 class="resume-heading">{l.cvPrintSkillsHeading}</h2>
                    <div class="resume-skills-grid">
                        {skills.map((skill) => (
                            <div class="resume-skill-group">
                                <h3 class="resume-skill-label">{skill.name}</h3>
                                <ul class="resume-skill-items">
                                    {skill.keywords.map((item) => (
                                        <li>{item}</li>
                                    ))}
                                </ul>
                            </div>
                        ))}
                    </div>
                </section>
            )
        }

        <div class="resume-date-footer">
            {l.cvPrintLocationPrefix}, {today}
        </div>
    </div>
</ResumeLayout>
