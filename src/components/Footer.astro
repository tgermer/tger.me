---
import { navigation } from "../data/navigation";
import { site } from "../data/site";

const year = new Date().getFullYear();
---

<footer class="bg-gray-50 dark:bg-gray-900 border-t border-gray-200 dark:border-gray-800 mt-16">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-8">
            <!-- Brand / Copyright -->
            <div>
                <p class="font-semibold text-gray-900 dark:text-white mb-1">{site.author}</p>
                <p class="text-sm text-gray-500 dark:text-gray-400">&copy; 2010–{year}</p>
            </div>

            <!-- Navigation -->
            <div>
                <h3 class="text-sm font-semibold text-gray-900 dark:text-white mb-3">Navigation</h3>
                <ul>
                    {
                        navigation.map((item) => (
                            <li>
                                <a href={item.link} class="text-sm text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors">
                                    {item.name}
                                </a>
                            </li>
                        ))
                    }
                </ul>
            </div>

            <!-- Kontakt -->
            <div>
                <h3 class="text-sm font-semibold text-gray-900 dark:text-white mb-3">Kontakt</h3>
                <p class="text-sm text-gray-600 dark:text-gray-400">{site.phone}</p>
                <a href={`mailto:${site.email}`} class="text-sm text-blue-600 dark:text-blue-400 hover:underline">
                    {site.email}
                </a>
            </div>
        </div>
    </div>

    <!-- Legal bar -->
    <div class="border-t border-gray-200 dark:border-gray-800">
        <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-3 flex flex-col sm:flex-row items-center justify-between gap-2 text-xs text-gray-500 dark:text-gray-500">
            <div class="flex gap-4">
                <a href={site.imprintUrl} class="hover:text-gray-700 dark:hover:text-gray-300 transition-colors">Impressum</a>
                <a href={site.privacyUrl} class="hover:text-gray-700 dark:hover:text-gray-300 transition-colors">Datenschutzerklärung</a>
            </div>
            <span>Made with ♥ in München</span>
        </div>
    </div>
</footer>
