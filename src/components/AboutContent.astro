---
import PageLayout from "../layouts/PageLayout.astro";
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";
import { site } from "../data/site";
import { t, focusAreaStyles, type Lang } from "../data/i18n";
import portrait from "../assets/apply/2025-09-02-portrait.jpg";

interface Props {
    lang: Lang;
}

const { lang } = Astro.props;
const l = t(lang);

const alternates = [
    { hreflang: "de", href: "https://tger.me/de/about" },
    { hreflang: "en", href: "https://tger.me/en/about" },
];

const mottoText = lang === "de" ? site.sloganDe : site.slogan;
---

<PageLayout title={l.aboutPageTitle} description={l.aboutPageDescription} lang={lang} alternates={alternates}>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-10">
        <!-- Sidebar with photo -->
        <div class="md:col-span-1">
            <div class="sticky top-24">
                <div class="rounded-2xl overflow-hidden py-10 bg-linear-to-br from-blue-500 to-blue-700 p-6 text-center shadow-lg">
                    <Image src={portrait} alt="Tristan Germer" class="w-40 h-40 object-cover blob-shape mx-auto mb-4 bg-white/10" widths={[160, 320]} sizes="160px" />
                    <h2 class="text-white font-bold text-xl">Tristan Germer</h2>
                    <p class="text-blue-100 mt-1">{l.aboutDegreeLabel}</p>
                    <p class="text-blue-200">{l.aboutLocationLabel}</p>

                    <div class="mt-4 pt-4 border-t border-blue-400/30 space-y-1">
                        <a href={`mailto:${site.email}`} class="flex items-center justify-center gap-2 text-blue-100 hover:text-white text-sm transition-colors">
                            <Icon name="tabler:mail" class="h-4 w-4 shrink-0" />
                            {site.email}
                        </a>
                        <a href={`tel:${site.phone.replace(/\s/g, "")}`} class="flex items-center justify-center gap-2 text-blue-100 hover:text-white text-sm transition-colors">
                            <Icon name="tabler:phone" class="h-4 w-4 shrink-0" />
                            {site.phone}
                        </a>
                        <a href={site.linkedin} target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 mt-3 px-4 py-2 bg-white/15 hover:bg-white/25 text-white text-sm font-medium rounded-lg transition-colors">
                            <Icon name="tabler:brand-linkedin-filled" class="h-4 w-4" />
                            LinkedIn
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Content -->
        <div class="md:col-span-2 space-y-10">
            <!-- Who am I? -->
            <div>
                <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">{l.aboutWhoAmITitle}</h2>
                <div class="space-y-4 text-gray-700 dark:text-gray-300 leading-relaxed">
                    {l.aboutWhoAmITexts.map((text) => <p>{text}</p>)}
                </div>
            </div>

            <!-- Focus areas -->
            <div>
                <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">{l.aboutFocusAreasTitle}</h2>
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                    {
                        focusAreaStyles.map((style, i) => {
                            const item = l.aboutFocusAreas[i];
                            return (
                                <div class={"p-5 rounded-xl border hover:shadow-md transition-shadow " + style.cardClass}>
                                    <div class={"w-10 h-10 rounded-lg flex items-center justify-center mb-3 " + style.iconBoxClass}>
                                        <Icon name={style.icon} class={"h-5 w-5 " + style.iconClass} />
                                    </div>
                                    <h3 class="font-semibold text-gray-900 dark:text-white mb-1">{item.title}</h3>
                                    <p class="text-sm text-gray-600 dark:text-gray-400">{item.desc}</p>
                                </div>
                            );
                        })
                    }
                </div>
            </div>

            <!-- What drives me -->
            <div>
                <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">{l.aboutDrivesTitle}</h2>
                <div class="space-y-4 text-gray-700 dark:text-gray-300 leading-relaxed">
                    <p>{l.aboutDrivesText}</p>
                    <blockquote class="border-l-4 border-blue-500 pl-4 italic text-gray-700 dark:text-gray-300 text-lg">{l.aboutDrivesQuote}</blockquote>
                </div>
            </div>

            <!-- Work style -->
            <div>
                <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">{l.aboutWorkStyleTitle}</h2>
                <p class="text-gray-700 dark:text-gray-300 leading-relaxed">{l.aboutWorkStyleText}</p>
            </div>

            <!-- Tools & Certifications -->
            <div>
                <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">{l.aboutToolsTitle}</h2>
                <div class="space-y-3">
                    <div>
                        <h3 class="text-sm font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider mb-2">{l.aboutCertificationsLabel}</h3>
                        <div class="flex flex-wrap gap-2">
                            {["PSPO I", "PSM I", "Nanodegree iOS Development"].map((cert) => <span class="inline-block bg-blue-50 dark:bg-blue-950 text-blue-700 dark:text-blue-300 text-xs font-medium px-3 py-1 rounded-full">{cert}</span>)}
                        </div>
                    </div>
                    <div>
                        <h3 class="text-sm font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider mb-2">{l.aboutToolsLabel}</h3>
                        <div class="flex flex-wrap gap-2">
                            {["Swift", "SwiftUI", "SwiftData", "Power BI", "SQL", "DMS (d.velop d3, komXwork)", "HTML/CSS/JS"].map((tool) => <span class="inline-block bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 text-xs font-medium px-3 py-1 rounded-full">{tool}</span>)}
                        </div>
                    </div>
                </div>
            </div>

            <!-- Motto -->
            <div>
                <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">{l.aboutMottoTitle}</h2>
                <blockquote class="border-l-4 border-blue-500 pl-4 italic text-gray-700 dark:text-gray-300 text-lg">
                    {mottoText}
                </blockquote>
            </div>

            <!-- CTAs -->
            <div class="flex flex-wrap gap-3">
                <a href="/portfolio" class="inline-flex items-center gap-2 px-5 py-2.5 bg-blue-600 text-white rounded-xl font-medium hover:bg-blue-700 transition-colors">
                    <Icon name="tabler:briefcase" class="h-4 w-4" />
                    {l.aboutCtaProjects}
                </a>
                <a href={`/${lang}/cv`} class="inline-flex items-center gap-2 px-5 py-2.5 border border-gray-300 dark:border-gray-700 rounded-xl font-medium hover:bg-gray-50 dark:hover:bg-gray-900 transition-colors">
                    <Icon name="tabler:file-text" class="h-4 w-4" />
                    {l.aboutCtaCv}
                </a>
                <a href={site.linkedin} target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 px-5 py-2.5 border border-gray-300 dark:border-gray-700 rounded-xl font-medium hover:bg-gray-50 dark:hover:bg-gray-900 transition-colors">
                    <Icon name="tabler:brand-linkedin-filled" class="h-4 w-4" />
                    LinkedIn
                </a>
            </div>
        </div>
    </div>
</PageLayout>
